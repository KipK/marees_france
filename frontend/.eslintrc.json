{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:lit/recommended",
    "plugin:wc/recommended",
    "prettier" // Make sure prettier is last to override other formatting rules
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false, // Needed for @babel/eslint-parser
    "babelOptions": {
      "presets": ["@babel/preset-env"]
    }
  },
  "plugins": [
    "lit"
  ],
  "rules": {
    // Add any specific rule overrides here if needed
  }
}